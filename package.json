// package.json
{
  "name": "arduino-proxy",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "node index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5"
  }
}

// index.js
const express = require('express');
const axios = require('axios');
const cors = require('cors');
const app = express();

app.use(cors());
app.use(express.json());

const HTTPS_TARGET = 'https://calm-awfully-shrew.ngrok-free.app';

app.post('*', async (req, res) => {
  try {
    console.log('Received POST request:', req.path);
    const response = await axios.post(`${HTTPS_TARGET}${req.path}`, req.body);
    res.json(response.data);
  } catch (error) {
    console.error('Proxy error:', error.message);
    res.status(500).json({ error: 'Proxy error' });
  }
});

app.get('*', async (req, res) => {
  try {
    console.log('Received GET request:', req.path);
    const response = await axios.get(`${HTTPS_TARGET}${req.path}`);
    res.json(response.data);
  } catch (error) {
    console.error('Proxy error:', error.message);
    res.status(500).json({ error: 'Proxy error' });
  }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log(`Proxy server running on port ${PORT}`);
});
